@model List<u18043624_HW05.Models.BookViewModel>
@using u18043624_HW05.Models;
@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>

@{
    if (!String.IsNullOrEmpty(ViewBag.Message))
    {
        <strong> @ViewBag.Message </strong>
    }
}

@{
    <table class="table table-striped table-dark">

        <thead>
            <tr>
                <th scope="col"><input type="text" class="form-control" id="bookNameInput" aria-describedby="bookNa" placeholder="Search Book Name"></th>
                <th scope="col">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Select a type</option>
                        <option value="1">Drama</option>
                    </select>
                </th>
                <th scope="col">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Select a Author</option>
                        <option value="1">frank been</option>
                    </select>
                </th>
                <th scope="col"><button type="button" class="btn btn-primary btn-sm btn-block btn-info">Search</button></th>
                <th scope="col"><button type="button" class="btn btn-primary btn-sm btn-block btn-danger">Clear</button></th>
            </tr>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Author</th>
                <th scope="col">Type</th>
                <th scope="col">Page Count</th>
                <th scope="col">Points</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookViewModel book in Model)
            {
                <tr>
                    <th scope="row">@book.bookID</th>
                    <td>@book.name</td>
                    <td>@book.pageCount</td>
                    <td>@book.point</td>
                    <td>@book.author.authorID</td>
                    <td>@book.type.typeID</td>
                    <td>avaliable</td>
                    <th><button type="button" class="btn btn-primary btn-sm btn-block btn-danger" value="Create" onclick="location.href='@Url.Action("BookDetails", "Home")'">View</button></th>
                </tr>
            }
            

        </tbody>
    </table>

}
