@model List<u18043624_HW05.Models.StudentViewModel>
@using u18043624_HW05.Models;
@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>

<h2>Students</h2>

@{
    <table class="table table-striped table-dark">

        <thead>
            <tr>
                <th scope="col"><input type="text" class="form-control" id="studentNameInput" aria-describedby="emailHelp" placeholder="Search Student Name"></th>
                <th scope="col">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Select Class</option>
                        <option value="1">9B</option>
                    </select>
                </th>
                <th scope="col"><button type="button" class="btn btn-primary btn-sm btn-block btn-info">Search</button></th>
                <th scope="col"><button type="button" class="btn btn-primary btn-sm btn-block btn-danger">Clear</button></th>
            </tr>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Class</th>
                <th scope="col">Points</th>
                <th scope="col">Borrow Book</th>
            </tr>
        </thead>
        <tbody>
            @foreach (StudentViewModel student in Model)
            {
                <tr>

                    <th scope="row">@student.studentID</th>
                    <td>@student.name</td>
                    <td>@student.surname</td>
                    <td>@student.studentClass</td>
                    <td>@student.point</td>
                    <td><button type="button" class="btn btn-primary btn-sm btn-success">Borrow Book</button></td>
                </tr>
            }
        </tbody>
    </table>